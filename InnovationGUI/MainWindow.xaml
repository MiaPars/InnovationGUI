        <Button x:Name="OKBTN" Content="OK" HorizontalAlignment="Left" Margin="577,203,0,0" VerticalAlignment="Top" Width="75" Click="OKBTN_Click"/>
        <Label x:Name="IndsætMad" Content="Indsæt mad" HorizontalAlignment="Left" Margin="577,139,0,0" VerticalAlignment="Top"/>



